{
  "plugins": [
    "@prettier/plugin-php",
    "@shufo/prettier-plugin-blade",
    "prettier-plugin-tailwindcss"
  ],
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "blade",
        "printWidth": 100,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.php"],
      "options": {
        "parser": "php",
        "printWidth": 100,
        "tabWidth": 4,
        "phpVersion": "8.1"
      }
    }
  ]
}

